---
/**
 * * Hero with background image
 * You'll want a mobile image, and a desktop image for this.
 */

import { Image } from "astro:assets";

// components
import Button from "@components/Button/Button.astro";

// images
import heroImage from "@images/hero-bg-min.jpg";
import heroImageMobile from "@images/hero-bg-min.jpg";

const headerImg = "https://cdn.heixifu.com/home-page/hero-bg.webp";
const headerImgMobile = "https://cdn.heixifu.com/home-page/hero-bg-mobile.jpg";

---

<section id="hero" class="relative z-10 flex min-h-[100lvh] w-full">
	<!-- background image -->
	<div class="absolute -z-10 h-full min-h-full w-full overflow-hidden">
		<div class="absolute inset-0 bg-black/10"></div>

		<Image
			src={headerImg}
			class="hidden h-auto min-h-full w-full object-cover object-bottom sm:block"
			alt="wedding"
			aria-hidden="true"
			loading="eager"
			inferSize={true}
			height={1400}
		/>
		<Image
			src={headerImgMobile}
			class="h-auto min-h-full w-full object-cover sm:hidden"
			alt="wedding"
			aria-hidden="true"
			loading="eager"
			inferSize={true}
			width={1200}
		/>
	</div>

	<!-- hero items -->
	<div class="site-container relative w-full py-0 text-center md:py-0 md:text-center translate-y-[60%]">
		<!-- Hero text -->
		<div class="text-base-50 my-auto mr-auto flex-col">
			<h1
				class="font-heading-1 text-5xl text-pretty drop-shadow-[0_2px_2px_rgba(0,0,0,0.4)] md:text-8xl"
			>
				Everything You Need is
			</h1>
			<h1
				class="font-heading-1 text-5xl text-pretty drop-shadow-[0_2px_2px_rgba(0,0,0,0.4)] md:text-8xl"
			>
				Already Inside
			</h1>
			<p
				class="mt-5 text-lg tracking-widest text-pretty drop-shadow-[0_1px_1px_rgba(0,0,0,0.2)] md:text-2xl"
			>
				Find Your Greatness
			</p>
			<div class="mt-5 flex flex-wrap justify-center gap-4 md:justify-center">
				<Button
					variant="ghost"
					href="/#contact"
					class="pl-40 pr-40 pt-5 pb-5 text-xl text-white underline drop-shadow-[0_1px_1px_rgba(0,0,0,0.2)] md:text-3xl border text-center"
				>
					PORTRAITS
				</Button>
			</div>
		</div>
	</div>
</section>
