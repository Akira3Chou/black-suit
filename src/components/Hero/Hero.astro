---
/**
 * * Hero with background image
 * You'll want a mobile image, and a desktop image for this.
 */

import { Image } from "astro:assets";

// components
import Button from "@components/Button/Button.astro";

const firstImg = "https://cdn.heixifu.com/home-page/001.jpg";
const secondImg = "https://cdn.heixifu.com/home-page/002.png";
const thirdImg = "https://cdn.heixifu.com/home-page/003.jpg";

---

<section id="hero" class="relative z-10 flex min-h-[100lvh] w-full mb-3">
	<!-- background image -->
	<div class="absolute -z-10 h-full min-h-full w-full bg-black overflow-hidden">
		<div class="flex flex-row h-full min-h-full w-full object-cover object-bottom">
			<div class="h-full min-h-full w-1/3 object-cover overflow-hidden">
				<Image
				src={firstImg}
				class="heroImg h-full w-full object-cover transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-101 duration-1000"
				alt="wedding"
				aria-hidden="true"
				loading="eager"
				inferSize={true}
				height={1400}
				/>
			</div>
			<div class="h-full min-h-full w-1/3 object-cover overflow-hidden">
				<Image
				src={secondImg}
				class="heroImg h-full w-full object-cover transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-101 duration-1000"
				alt="wedding"
				aria-hidden="true"
				loading="eager"
				inferSize={true}
				height={1400}
				/>
			</div>
			<div class="h-full min-h-full w-1/3 object-cover overflow-hidden">
				<Image
				src={thirdImg}
				class="heroImg h-full w-full object-cover transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-101 duration-1000"
				alt="wedding"
				aria-hidden="true"
				loading="eager"
				inferSize={true}
				height={1400}
				/>
			</div>
		</div>
	</div>

	<!-- hero items -->
	<div class="relative w-full py-0 text-center md:py-0 md:text-center translate-y-[50%]">
		<!-- Hero text -->
		<div class="text-base-50 my-auto mr-auto flex-col">
			<h1
				class="select-none font-heading-1 text-5xl text-pretty drop-shadow-[0_2px_2px_rgba(0,0,0,0.4)] sm:text-5xl md:text-7xl lg:text-8xl xl:text-[7rem] 2xl:text-[10rem]"
			>
				Everything You Need is
			</h1>
			<h1
				class="select-none font-heading-1 text-5xl text-pretty drop-shadow-[0_2px_2px_rgba(0,0,0,0.4)] sm:text-5xl md:text-7xl lg:text-8xl xl:text-[7rem] 2xl:text-[10rem]"
			>
				Already Inside
			</h1>
			<p
				class="select-none mt-5 text-lg tracking-widest text-pretty drop-shadow-[0_1px_1px_rgba(0,0,0,0.2)] md:text-3xl"
			>
				Find Your Greatness
			</p>
			<div class="mt-5 flex flex-wrap justify-center gap-4 md:justify-center">
				<Button
					variant="ghost"
					href="/portraits"
					class="pl-40 pr-40 pt-5 pb-5 text-xl text-white underline drop-shadow-[0_1px_1px_rgba(0,0,0,0.2)] md:text-3xl border text-center transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-101 duration-300"
				>
					PORTRAITS
				</Button>
			</div>
		</div>
	</div>
</section>

<script>
	const heroImgs = document.getElementsByClassName("heroImg");
	for (var i = 0; i < heroImgs.length; i++) {
		heroImgs[i].addEventListener("contextmenu", function (event) {
			event.preventDefault();
		});
	}
</script>
