---
import { Icon } from "astro-icon/components";

// components
import FooterLink from "./FooterLink.astro";
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";

// data
import siteData from "@config/siteData.json";

const today = new Date();
---

<footer class="bg-base-100/40 mt-12 w-full flex flex-col items-center justify-center">
	<div class="w-full mx-auto">
      <!-- 右上角文字 -->
      <div class="flex justify-end mb-4 mr-15">
        <SiteLogo />
      </div>
      
      <!-- 分割线 -->
      <div class="w-full h-px bg-gray-800 my-4"></div>
      
      <!-- 左下角文字 -->
      <div class="flex justify-start mt-4 ml-15">
        <p class="text-sm text-black">© BLACK SUIT PHOTOGRAPH</p>
      </div>
    </div>
	<div class="site-container">
		<!-- footer links -->
		<div
			class="flex w-full flex-col items-center justify-between gap-2 text-lg md:grid md:grid-cols-5"
		>
			<div class="flex justify-center py-2 text-center md:hidden">
				<SiteLogo />
			</div>
			<div class="col-span-2 flex justify-end gap-4">
				<FooterLink href="/portraits">PORTRAITS</FooterLink>
				<FooterLink href="/">VIDEOS</FooterLink>
				<FooterLink href="/">ADVERTISING</FooterLink>
			</div>
			<div class="hidden justify-center text-center md:flex">
				<SiteLogo />
			</div>
			<div class="flex gap-4 md:col-span-2">
				<FooterLink href="/">PRODUCTS</FooterLink>
				<FooterLink href="/">BY PHONE</FooterLink>
				<FooterLink href="/">ABOUT US</FooterLink>
			</div>
		</div>

	</div>
</footer>
