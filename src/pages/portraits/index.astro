---
import BaseLayout from "@layouts/BaseLayout.astro";
const photos = [
	"https://cdn.heixifu.com/%E8%82%96%E5%83%8F/1AQUAHELPERS%E9%AB%98%E7%AE%A1253%20%E6%8B%B7%E8%B4%9D%204.jpg",
	"https://cdn.heixifu.com/%E8%82%96%E5%83%8F/3a00a258-53a8-67f8-bb97-f7f727e1b03a.jpg",
	"https://cdn.heixifu.com/%E8%82%96%E5%83%8F/3a013c7d-3f09-0cc5-5a15-5b2292a2da0b.jpg",
	"https://cdn.heixifu.com/%E8%82%96%E5%83%8F/617%E6%8B%8D%E6%91%840930%20%E6%8B%B7%E8%B4%9D%202.jpg",
	"https://cdn.heixifu.com/%E8%82%96%E5%83%8F/815kWechatIMG37%20%E6%8B%B7%E8%B4%9D%202.jpg",
	
];
---

<BaseLayout
	title="Portraits"
	description="Capturing the essence of visionary leaders through powerful, professional portraits."
	navStartStyle="white"
>
	<section id="portraits" class="relative z-10 flex min-h-[100lvh] w-full">
		<div class="mx-auto px-4 py-8">
			<div class="columns-1 gap-4 sm:columns-2 md:columns-3 lg:columns-4">
				{
					photos.map((photo) => (
						<div class="mb-4 break-inside-avoid">
							<img
								src={photo}
								class="w-full rounded-lg shadow-md transition-opacity hover:opacity-90"
							/>
						</div>
					))
				}
			</div>
		</div>
	</section>
</BaseLayout>
