<style>
	* {
		box-sizing: border-box;
	}

	/* ---- grid ---- */

	.grid {
		background: #ddd;
	}

	/* clear fix */
	.grid:after {
		content: "";
		display: block;
		clear: both;
	}

	/* ---- .grid-item ---- */

	.grid-sizer,
	.grid-item {
		width: 33.333%;
	}

	.grid-item {
		float: left;
	}

	.grid-item img {
		display: block;
		max-width: 100%;
	}
</style>

<BaseLayout
	title="BLACK SUIT | PORTRAITS"
	description="Capturing the essence of visionary leaders through powerful, professional portraits."
	navStartStyle="default"
>
	<section id="portraits" class="mt-20">
		<div class="masonry-grid">
			<div class="masonry-grid-sizer"></div>
			{
				photos.map((photo) => (
					<div class="masonry-grid-item">
						<img src={photo} />
					</div>
				))
			}
		</div>
	</section>
	<PortraitsScript />
</BaseLayout>

